<h1>Listing schedules</h1>

<table>
  <tr>
    <th>Time</th>
    <th>Task</th>
    <th>Day</th> 
    <th></th>
    <th></th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.time %></td>
    <td><%= schedule.task %></td>
    <td><%= schedule.day %></td>
    <td><%= link_to 'show', schedule %></td>
    <td><%= link_to 'Delete', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<hr>
<a class=" secondary button", href="acds/editsch">add new schedule</a>



